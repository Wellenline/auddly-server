{
	"name": "waveline-server",
	"version": "2.0.0",
	"description": "Waveline Music Server",
	"main": "dist/app.js",
	"bin": "dist/app.js",
	"scripts": {
		"test": "ava test/**/*.js",
		"pretest": "tsc --experimentalDecorators test/test.ts",
		"lint": "tslint 'src/**/*.ts'",
		"prebuild": "npm run clean",
		"clean": "rimraf dist && rimraf test/**/*.js",
		"build": "tsc",
		"dev": "nodemon -e ts  --exec \"npm run start\"",
		"start": "npm run lint && tsc --project tsconfig.json && node dist/app.js"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.1.0",
		"@commitlint/config-conventional": "^8.1.0",
		"@types/cors": "^2.8.6",
		"@types/dotenv": "^4.0.0",
		"@types/formidable": "^1.0.29",
		"@types/ip": "^0.0.30",
		"@types/mime": "^2.0.0",
		"@types/mongoose": "^5.5.16",
		"@types/node": "^11.13.20",
		"ava": "^1.2.1",
		"cz-conventional-changelog": "^3.0.2",
		"husky": "^3.0.5",
		"nodemon": "^1.19.2",
		"rimraf": "^2.7.1",
		"standard-version": "^7.0.0",
		"supertest": "^3.0.0",
		"tslint": "^4.3.1",
		"typescript": "^3.6.2"
	},
	"pkg": {
		"scripts": "dist/**/*.js"
	},
	"author": "Mihkel Baranov",
	"license": "MIT",
	"dependencies": {
		"@wellenline/via": "git+https://github.com/wellenline/via.git#rev2",
		"album-art": "^2.0.1",
		"axios": "^0.18.1",
		"cors": "^2.8.1",
		"dotenv": "^4.0.0",
		"formidable": "^1.1.1",
		"ip": "^1.1.5",
		"laf-http": "^3.0.0",
		"mime": "^2.4.4",
		"mongoose": "^5.6.11",
		"music-metadata": "^2.6.1",
		"qrcode-terminal": "^0.12.0",
		"typegoose": "^5.9.0"
	},
	"repository": "https://github.com/MihkelBaranov/waveline-server.git",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
