{
	"name": "waveline-server",
	"version": "3.0.0",
	"description": "Waveline Music Server",
	"main": "dist/app.js",
	"bin": "dist/app.js",
	"scripts": {
		"test": "ava test/**/*.js",
		"pretest": "tsc --experimentalDecorators --emitDecoratorMetadata test/test.ts",
		"lint": "tslint 'src/**/*.ts'",
		"prebuild": "npm run clean",
		"clean": "rimraf dist && rimraf test/**/*.js",
		"build": "tsc",
		"dev": "ts-node-dev --respawn --transpileOnly --ignore-watch node_modules ./src/app.ts",
		"start": "node dist/app.js",
		"release": "standard-version"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.1.0",
		"@commitlint/config-conventional": "^8.1.0",
		"@types/cors": "^2.8.6",
		"@types/dotenv": "^4.0.0",
		"@types/formidable": "^1.0.29",
		"@types/ip": "^0.0.30",
		"@types/mime": "^2.0.1",
		"@types/mongoose": "^5.7.12",
		"@types/node": "^11.15.11",
		"@types/progress": "^2.0.3",
		"@types/qrcode": "^1.3.4",
		"@types/supertest": "^2.0.8",
		"ava": "^3.7.0",
		"cz-conventional-changelog": "^3.0.2",
		"husky": "^3.0.5",
		"rimraf": "^2.7.1",
		"standard-version": "^7.0.0",
		"supertest": "^3.0.0",
		"ts-node-dev": "^1.0.0-pre.44",
		"tslint": "^6.1.1",
		"typescript": "^3.8.3"
	},
	"pkg": {
		"scripts": "dist/**/*.js"
	},
	"author": "Mihkel Baranov",
	"license": "MIT",
	"dependencies": {
		"@typegoose/typegoose": "^6.4.0",
		"@wellenline/via": "^2.0.4",
		"axios": "^0.18.1",
		"chokidar": "^3.3.1",
		"cors": "^2.8.1",
		"dotenv": "^4.0.0",
		"formidable": "^1.2.2",
		"ip": "^1.1.5",
		"mime": "^2.4.4",
		"mongoose": "^5.9.9",
		"music-metadata": "^2.6.1",
		"pg": "^8.2.1",
		"progress": "^2.0.3",
		"qrcode": "^1.4.4",
		"sox-stream": "^2.0.3",
		"sqlite3": "^4.2.0",
		"typeorm": "^0.2.25"
	},
	"repository": "https://github.com/MihkelBaranov/waveline-server.git",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
